/* 我要借书样式 */
.borrow {
	width: 50%;
	border: 1px solid white;
	border-radius: 4em;
	margin: 10% auto;
	text-align: center;
	color: #fff;
	text-decoration: none;
	display: block;
	padding: 0.5em 0;
}
