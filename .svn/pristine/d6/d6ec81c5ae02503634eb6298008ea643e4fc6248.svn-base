@charset "UTF-8";

/* 头部样式 */

.headerTop {
	position: fixed;
	padding: 0.5em 0;
	width: 100%;
	height: 2em;
	top: 0;
	background: -webkit-gradient(linear, left top, left bottom, from(#009fab), to(#00a4ad));
	text-align: center;
	z-index: 996;
	border-bottom: 1px solid #19acb4;
}

.headerTop .mybook {
	height: 2em;
	position: absolute;
	left: 0.5em;
}

.headerTop .back {
	height: 2em;
	position: absolute;
	left: 0.5em;
	display: none;
    outline: none;
}

.headerTop .book_angle{
	display: inline-block;
	padding-top: 0.1em;
	height:1.8em;
}

.headerTop .user{
	display: inline-block;
	height: 2em;
	position: absolute;
	right: 0.5em;
	color: #fff;
	font-weight: bold;
    outline: none;
    text-overflow: ellipsis;
    overflow: hidden;
    width: 6em;
    white-space: nowrap;
}

.headerTop .user img{
	height: 2em;
	float: right;
}

.headerTop .user span{
	line-height: 2em;
}
.headerTop .circlePoint {
    position: absolute;
    top: 0.7em;
    left: 1.7em;
    background: red;
    height: 0.5em;
    width: 0.5em;
    display: inline-block;
    border-radius: 0.5em;
}

.headerTop .logout {
	float: right;
	line-height: 2.5em;
	width: 8em;
    height: 2.5em;
	color: #009dda;
	border-radius: 0.3em;
	background: #fff;
	position: absolute;
	top: 3em;
	right: 0.5em;
	display: none;
    outline: none;
}