div(class="headerTop", node-type="headerTop")
	- var isLogin = $CONFIG.username;
	- if(isLogin)
		a(href="mybooklist")
			img(src="http://js.catfood.wap.grid.sina.com.cn/img/mybook.png", node-type="mybook", class="mybook")
			i.circlePoint(node-type="circlePoint", style="display:none")
		img(src="http://js.catfood.wap.grid.sina.com.cn/img/back.png", node-type="back", class="back")
		a(href="index")
			img(src="http://js.catfood.wap.grid.sina.com.cn/img/book_angle.gif", class="book_angle")
		div(class="user", node-type="user")
			img(src="http://js.catfood.wap.grid.sina.com.cn/img/log.png", node-type="user_image")
			span(node-type="name", class="name") #{$CONFIG.username}
		//span(node-type="logout", class="logout") 注销
