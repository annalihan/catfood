		a(href="mybooklist",style='display:none;')
			img(src="http://js.catfood.wap.grid.sina.com.cn/img/mybook.png", node-type="mybook", class="mybook")
		a(href="index")
			img(src="http://js.catfood.wap.grid.sina.com.cn/img/book_angle.gif", class="book_angle")
