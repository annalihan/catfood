- var winWidth = document.documentElement.clientWidth;
- var left = (winWidth > 640 ? auto : 0);
div(style="position:fixed;top:0;left:#{left}px;background-color:rgba(255,255,255,0);width:100%;height:100%;max-width: 640px;z-index:5000;")
.E_layer_tips(style="position:fixed;max-width: 640px;z-index: 9000;")
    - if (type === 'loading')
        .content
            em.icon_load_loading
            p !{text}
    - else
        - var iconClass = 'icon_tip_' + type;
        .content.layer_tips_common
            em(class="#{iconClass}")
            p !{text}
